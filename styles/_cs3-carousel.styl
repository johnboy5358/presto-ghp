.cs3-carousel
	background-color #dfdfdf
	.slide-container
	.slide
	.slide-content
	.slide-content img
	.slide-selector-indicator
		position absolute
	.slide-container
	.slide
	.slide-content
		top 0
		right 0
		left 0
		bottom 0
		
	.slide-content img
		width 100%
		height 100%

	.slide-selector-indicator
		width 6px
		height 10px
		top 3%
		z-index 9999
		background-color #fff
		transform scale(1.0)
		transition transform 1s

	.slide-selector-indicator:hover
		transform scale(1.5)
		cursor pointer
		background-color #5882F1

	.slide-container
		perspective 8000px
		transform-style flat
	.slide-content
		z-index 10
		opacity 0
		transform scale(.3) rotate3d(1, 1, 0, 150deg)
		transition all 3s ease
		label
			position absolute
			background-color rgba(255, 255, 255, 0.3)
			z-index 99
			width 15%
			height 100%
			font-size 900%
			line-height 350%
			font-family "Varela Round" sans-serif
			cursor pointer
			text-align center
			color #FFF
			opacity 0
			transition opacity 0.2s
			&.prev
				left 0
			&.next
				right 0
			
	input:checked ~ .slide-content
		z-index 999
		opacity 1
		transform scale(1) rotate3d(1, 1, 0, 0deg)
		transition all 1.5s 1.5s ease
		label
			&:hover
				opacity 1
			
	input:checked + .slide-selector-indicator
		background-color #3C8CD3
	
// Define a different transformation for each slide.
// The first slide accepts the default transformation.
	.second
		&.slide-content
			transform scale(.1)
	.third
		&.slide-content
			transform rotateX(90deg)
	.fourth
		&.slide-content
			transform rotateX(180deg)
	.fifth
		&.slide-content
			transform rotateY(85deg)
	.sixth
		&.slide-content
			transform rotateY(90deg)

$num-slides = 6
	for item in (1..$num-slides)
		.slide:nth-child({item}) .slide-selector-indicator
			left (43 + 2*item)%

$carousel-width = 65
$carousel-height = 36
.cs3-carousel
	position relative
	width ($carousel-width)rem
	height ($carousel-height)rem
	input
		display none
